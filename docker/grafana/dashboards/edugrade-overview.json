{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(edugrade_http_requests_total[5m])",
          "legendFormat": "{{method}} {{route}} {{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "title": "Request Duration (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(edugrade_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, rate(edugrade_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p50"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Database Health",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "edugrade_db_connection_health",
          "legendFormat": "{{database}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } }, "type": "value" }
          ],
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "title": "Conversiones por Sistema",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "rate(edugrade_conversiones_total[5m])",
          "legendFormat": "{{sistema_origen}} -> {{sistema_destino}}"
        }
      ]
    },
    {
      "title": "Transferencias",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "rate(edugrade_transferencias_total[5m])",
          "legendFormat": "{{sistema_origen}} -> {{sistema_destino}} ({{status}})"
        }
      ]
    },
    {
      "title": "Cache Hit Rate",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "rate(edugrade_cache_hits_total[5m]) / (rate(edugrade_cache_hits_total[5m]) + rate(edugrade_cache_misses_total[5m]))",
          "legendFormat": "Hit Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "green", "value": 0.8 }
            ]
          }
        }
      }
    },
    {
      "title": "Errores por Tipo",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 20 },
      "targets": [
        {
          "expr": "rate(edugrade_errors_total[5m])",
          "legendFormat": "{{type}}"
        }
      ]
    },
    {
      "title": "Rate Limit Hits",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 20 },
      "targets": [
        {
          "expr": "rate(edugrade_rate_limit_hits_total[5m])",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "title": "Calificaciones Registradas",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "rate(edugrade_calificaciones_registradas_total[5m])",
          "legendFormat": "{{sistema}} - {{tipo_evaluacion}}"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["edugrade"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "EduGrade Global - Overview",
  "uid": "edugrade-overview"
}
